<div class="content" ng-controller="downloadController">


	<div class="download-box">
		<form class="form-inline" method="post" role="form" action="/">
		  <div class="form-group">
		    <input type="text" class="form-control" id="link" name="link" placeholder="Paste your file's URL here" data-ng-model="link">
		  </div>
		  <div class="form-group">
		    <input type="text" class="form-control" id="name" name="name" placeholder="File Name" data-ng-model="name">
		  </div>
		  <button type="submit" class="btn btn-primary" id="download" data-ng-disabled="!isValid" >Download</button>
		</form>

	</div>

</div>